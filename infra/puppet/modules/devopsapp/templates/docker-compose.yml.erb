version: "3.8"
services:
  backend:
    image: <%= @backend_image %>
    restart: unless-stopped
    environment:
      NODE_ENV: production
      PORT: 5000
      MONGODB_URI: <%= @mongodb_uri %>
      JWT_SECRET: <%= @jwt_secret %>
      CLIENT_URL: <%= @client_url %>
      EMAIL_USER: <%= @email_user %>
      EMAIL_PASS: <%= @email_pass %>
      EMAIL_FROM: DevopsApp <<%= @email_user %>>
    ports:
      - "5000:5000"
  frontend:
    image: <%= @frontend_image %>
    restart: unless-stopped
    environment:
      VITE_API_URL: <%= @api_url %>
    ports:
      - "3000:80"
    depends_on:
      - backend
